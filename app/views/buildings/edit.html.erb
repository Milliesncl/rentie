<h1>Buildings#edit</h1>
<p>Find me in app/views/buildings/edit.html.erb</p>

  <%= simple_form_for [@building] do |f| %>
    <%= f.input :address, label: "Address" %>
    <%= f.input :mortgage, label: "Mortgage" %>
    <%= f.input :purchase_price, label: "Purchase price" %>
    <%= f.input :purchase_date, label: "Purchase date" %>
    <%= f.input :taxes, label: "Taxes amount" %>
    <%= f.submit "Update a building", class:"btn btn-primary" %>
  <% end %>
