<div class="form-background">

  <h1>Add building</h1>

  <%= simple_form_for [@building] do |f| %>
    <%= f.input :address, label: "Address" %>
    <%= f.input :mortgage, label: "Mortgage" %>
    <%= f.input :purchase_price, label: "Purchase price" %>
    <%= f.input :date, as: :date, label: "Purcahse Date:", start_year: Date.today.year, order: [:day, :month, :year], html5: true, input_html: { min: Date.today.to_s, value: Date.today.to_s } %>
    <div class="task-btn">
    <%= f.submit "Create a building", class:"btn btn-primary" %>
  </div>
  <% end %>
</div>
