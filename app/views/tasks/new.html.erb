<div class="form-background">
  <h1>Add task</h1>

  <% if current_user.renter == false %>
    <%= simple_form_for [@task] do |f| %>
      <%= f.input :title, label: "Title" %>
      <%= f.input :description, label: "Description" %>
      <%= f.input :category, label: "Category", collection: [ "Renovation", "Hydro", "Electricity", "Plumbing", "Furniture", "Other" ] %>
      <div class="line-one">
        <%= f.input :urgency, label: "Urgency", collection: [ "High", "Medium", "Low" ] %>
        <%= f.input :expense, label: "Expense" %>
      </div>
      <%= f.input :date, as: :date, label: "Start Date:", start_year: Date.today.year, order: [:day, :month, :year], html5: true, input_html: { min: Date.today.to_s, value: Date.today.to_s } %>
      <%= f.input :date, as: :date, label: "End Date:", start_year: Date.today.year, order: [:day, :month, :year], html5: true, input_html: { min: Date.today.to_s, value: Date.today.to_s } %>
      <div class="line-one">
        <%= f.input :building_id, label: "Building", collection: @buildings, as: :select %>
        <%= f.input :unit_id, label: "Unit", collection: @units, as: :select %>
      </div>
      <%= f.input :contractor_id, label: "Contractor", collection: @contractors, as: :select %>
      <div class="uploads">
        <%= f.input :photos, as: :file, input_html: { multiple: true }, label: "Upload photos" %>
        <%= f.input :bill_upload, as: :file, input_html: { multiple: true }, label: "Upload bill" %>
      </div>
      <div class="task-btn">
        <%= f.submit "Create a task", class:"btn btn-primary" %>
      </div>
    <% end %>
  <% else %>
    <%= simple_form_for [@task] do |f| %>
      <%= f.input :title, label: "Title" %>
      <%= f.input :description, label: "Describe your request" %>
      <%= f.input :urgency, label: "Urgency", collection: [ "High", "Medium", "Low" ] %>
      <%= f.input :category, label: "Category", collection: [ "Renovation", "Hydro", "Electricity", "Plumbing", "Furniture", "Other" ] %>
      <%= f.input :photos, as: :file, input_html: { multiple: true }, label: "Upload photos" %>
      <%= f.submit "Create a task", class:"btn btn-primary" %>
    <% end %>
  <% end %>
  </div>
</div>
