<h1>Units#show</h1>
<p>Find me in app/views/units/show.html.erb</p>

<p>Unit number: <%= @unit.unit_number %></p>
<p>Purchase price: <%= @unit.purchase_price %></p>
<p>Payment method: <%= @unit.payment_method %></p>
<p>Renewal date: <%= @unit.renewal_date %></p>
<p>Rent amount: <%= @unit.rent_amount %></p>
<p>Payment day: <%= @unit.payment_date %></p>

<% if @unit.photos.attached? %>
  <% @unit.photos.each do |photo| %>
    <%= cl_image_tag photo.key, height: 350, crop: :fill %>
  <% end %>
<% end %>

<!-- Need to be changed -->
<% if @unit.lease.attached? %>
<iframe src="https://res.cloudinary.com/duc5z0utg/image/upload/v1598563324/carte_ville_marie_escwby.pdf" width="200" height="250"></iframe>
  <p>Lease: <%= cl_image_tag @unit.lease.key, format: 'pdf', width: 200, height:250, flag:"attachment", target: "_blank" %></p>
  <%= link_to "download key", building_unit_download_path(@building, @unit), target: "_blank"%>
  <% else %>
  <p>No lease</p>
<% end %>
<!-- End of need to be changed -->

<p><%= link_to "Edit this unit", edit_building_unit_path(@building.id, @unit.id), class:"btn btn-primary"%></p>
<p><%= link_to "Delete this unit", unit_path(@unit.id), data: { confirm: "Are you sure to delete the unit number #{@unit.unit_number} ?" }, method: :delete, class:"btn btn-secondary"%></p>
